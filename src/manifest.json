{
  "manifest_version": 2,
  "name": "MTurk Suite",
  "version": "__package.version__",

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "browser_action": {
    "default_title": "MTurk Suite",
    "default_icon": "icon.png",
    "default_popup": "pages/popup/index.html"
  },

  "background": {
    "scripts": ["background.ts"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.ts"]
    }
  ],

  "permissions": ["<all_urls>"]
}
